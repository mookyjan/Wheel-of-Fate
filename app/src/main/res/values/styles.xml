<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Button-->
    <style name="BaseButton" parent="@android:style/Widget.Button" />

    <style name="StyledButton" parent="@style/BaseButton">
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
<!--        <item name="android:fontFamily">@font/raleway_bold</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="BaseTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="BaseTextView.OpenSansBold">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="BaseTextView.OpenSansSemiBold">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>
</resources>
